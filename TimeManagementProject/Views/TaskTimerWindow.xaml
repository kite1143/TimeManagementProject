<Window x:Class="TimeManagementProject.Views.TaskTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementProject.Views"
        mc:Ignorable="d"
        Title="TaskTimerWindow" Height="400" Width="350">
    <Grid x:Name="mainGrid" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Back"
                Grid.Row="0"
                Grid.Column="0"
                Margin="15"
                Click="Button_Back_Click"/>
        <TextBlock Text="Task: "
                   Grid.Row="0"
                   Grid.Column="1"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
        <TextBlock Text="{Binding Title}"
                   TextWrapping="Wrap"
                   Grid.Row="0"
                   Grid.Column="2"
                   Grid.ColumnSpan="2"
                   FontSize="13"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <TextBlock x:Name="timerTextBlock"
                   Text="{Binding TimerString}"
                   Grid.Row="1"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   FontSize="70"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <Button Content="Start" 
                Grid.Row="3"
                Grid.Column="1"
                FontSize="20" 
                Margin="10"
                Click="Button_Start_Click"/>
        <Button Content="Stop" 
                Grid.Row="3"
                Grid.Column="2"
                FontSize="20" 
                Margin="10"
                Click="Button_Stop_Click"/>
        <TextBlock Text="Start Date:"
                   Grid.Row="5"
                   Grid.Column="0"
                   FontSize="14"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
        <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}"
                   Grid.Row="5"
                   Grid.Column="1"
                   FontSize="14"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <TextBlock Text="Due Date:"
                   Grid.Row="5"
                   Grid.Column="2"
                   FontSize="14"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
        <TextBlock Text="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}'}"
                   Grid.Row="5"
                   Grid.Column="3"
                   FontSize="14"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
