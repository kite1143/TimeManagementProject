<Page x:Class="TimeManagementProject.Views.DashBoard.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementProject.Views.DashBoard" xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="DashboardView" Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" 
                Background="Black"
                Padding="2"
                CornerRadius="5"
                BorderThickness="1"
                MaxHeight="500"
                MaxWidth="700">
            <oxy:PlotView 
              MaxHeight="500"
              MaxWidth="700"
              Name="PieChartView" 
              Model="{Binding PieChartModel}"
              Margin="10"/>
        </Border>
        

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Month"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontFamily="Arial Black"
                       FontSize="20"
                       Margin="10"/>
            <ComboBox x:Name="monthComboBox" 
                      Grid.Row="0" 
                      Grid.Column="1"
                      MinHeight="40"
                      MinWidth="100" 
                      Margin="10, 15, 10, 15"
                      HorizontalContentAlignment="Center"
                      HorizontalAlignment="Left"
                      VerticalContentAlignment="Center"
                      SelectionChanged="monthComboBox_SelectionChanged"/>
            <TextBlock Text="Year"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="10"
                       FontFamily="Arial Black"
                       FontSize="20"
                       Grid.Row="0"
                       Grid.Column="2"/>
            <ComboBox x:Name="yearComboBox" 
                      Grid.Row="1" 
                      Grid.Column="3"
                      MinHeight="40"
                      MinWidth="100" 
                      Margin="10, 15, 10, 15"
                      HorizontalAlignment="Left"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      SelectionChanged="yearComboBox_SelectionChanged"/>
        </Grid>
    </Grid>
</Page>
