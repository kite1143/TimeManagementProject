<Window x:Class="TimeManagementProject.Views.DashBoard.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementProject.Views.DashBoard" xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="DashboardView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <oxy:PlotView Grid.Column="0"
                  MinHeight="300"
                  MinWidth="600"
                  Name="PieChartView" 
                  Model="{Binding PieChartModel}"
                  Margin="10"/>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Month"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Margin="10"/>
            <ComboBox x:Name="monthComboBox" 
                      Grid.Row="0" 
                      Grid.Column="1"
                      Width="100" 
                      Margin="10, 15, 10, 15"
                      SelectionChanged="monthComboBox_SelectionChanged"/>
            <TextBlock Text="Year"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10"
                       FontSize="20"
                       Grid.Row="1"/>
            <ComboBox x:Name="yearComboBox" 
                      Grid.Row="1" 
                      Grid.Column="1"
                      Width="100" 
                      Margin="10, 15, 10, 15"
                      SelectionChanged="yearComboBox_SelectionChanged"/>
        </Grid>
    </Grid>
</Window>
