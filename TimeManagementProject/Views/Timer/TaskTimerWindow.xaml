<Page x:Class="TimeManagementProject.Views.TaskTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementProject.Views"
        mc:Ignorable="d"
        Title="TaskTimerWindow" Height="350" Width="250">
    <Border Background="LightGray" 
            CornerRadius="5"
            BorderThickness="1">
        <Grid Margin="4" x:Name="mainGrid" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Task: "
                       Grid.Row="0"
                       FontFamily="Arial Black"
                       Grid.Column="0"
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
            <TextBlock Text="{Binding Title}"
                       TextWrapping="Wrap"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontSize="15"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/> 
            <TextBlock x:Name="timerTextBlock"
                       Text="{Binding TimerString}"
                       Grid.Row="1"
                       Grid.RowSpan="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       FontSize="50"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <ui:Button  Content="Start"
                        Appearance="Primary"
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10"
                        HorizontalAlignment="Right"
                        Click="Button_Start_Click"/>
            <ui:Button  Content="Stop" 
                        Appearance="Dark"
                        Grid.Row="3"
                        Grid.Column="1"
                        FontSize="40" 
                        Margin="10"
                        HorizontalAlignment="Left"
                        Click="Button_Stop_Click"/>
            <TextBlock Text="Description:"
                       Grid.Row="4"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       FontSize="20"
                       Margin="5"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Description}"
                       TextWrapping="Wrap"
                       Grid.Row="5"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       FontSize="15"
                       Margin="5"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Page>
