<Window x:Class="TimeManagementProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" SizeToContent="Width">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add Task" 
                Click="Button_Click" 
                HorizontalAlignment="Right" 
                Margin="0,10,10,0" 
                FontSize="20"
                Grid.Row="0"/>
        <ListView x:Name="taskListView" 
                      Margin="10" 
                      SelectionChanged="taskListView_SelectionChanged"
                      Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <CheckBox Margin="5" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      Grid.Row="0" 
                                      Grid.Column="0" 
                                      IsChecked="{Binding isCompleted}" 
                                      Checked="CheckBox_Checked"/>
                            <TextBlock Margin="5" 
                                       Grid.Row="0" 
                                       Grid.Column="1" 
                                       Grid.ColumnSpan="4" 
                                       Text="{Binding Title}" 
                                       FontSize="24" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="1" 
                                       Grid.ColumnSpan="1" 
                                       Text="Time Spend:" 
                                       FontSize="13" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="2" 
                                       Grid.ColumnSpan="1" 
                                       Text="{Binding Timer}" 
                                       FontSize="13" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="3" 
                                       Grid.ColumnSpan="1" 
                                       Text="Start date:" 
                                       FontSize="13" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="4" 
                                       Grid.ColumnSpan="1" 
                                       Text="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                       FontSize="13" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Margin="5,0,0,0" 
                                       Grid.Row="1" 
                                       Grid.Column="5" 
                                       Grid.ColumnSpan="1" 
                                       Text="Due date:" 
                                       FontSize="13" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="6" 
                                       Grid.ColumnSpan="1" 
                                       Text="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                       FontSize="13" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                            <Button Grid.Row="0" 
                                    Grid.RowSpan="2"
                                    Grid.Column="7"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="⏱" 
                                    Margin="10" 
                                    FontSize="20" 
                                    Click="Button_Timer_Click"/>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
