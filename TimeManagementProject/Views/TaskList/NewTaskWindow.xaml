<Window x:Class="TimeManagementProject.Views.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:TimeManagementProject.Views"
        mc:Ignorable="d"
        Title="NewTaskWindow" 
        MinWidth="400" 
        MinHeight="600" 
        Width="400" 
        Height="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="24"
                   Text="CREATE TASK"
                   FontFamily="Arial Black"
                   HorizontalAlignment="Left"
                   Margin="97,10,0,10"/>
        <Grid Margin="10,10,10,10"
              Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Title" 
                       HorizontalAlignment="Right" 
                       Margin="10"
                       FontWeight="Bold"
                       Grid.Column="0"
                       Grid.Row="0"/>
            <TextBox x:Name="titleTextBox" Margin="10" 
                     Grid.Column="1" 
                     Grid.Row="0"/>
            <TextBlock Text="Description" 
                       FontWeight="Bold"
                       HorizontalAlignment="Right" 
                       Margin="10"
                       Grid.Column="0"
                       Grid.Row="1"/>
            <TextBox x:Name="descriptionTextBox" Margin="10" 
                     Grid.Column="1" 
                     Grid.Row="1"
                     TextWrapping="Wrap"/>
            <TextBlock Text="Start Date" 
                       FontWeight="Bold"
                       HorizontalAlignment="Right" 
                       Margin="10"
                       Grid.Column="0"
                       Grid.Row="2"/>
            <DatePicker x:Name="startDatePicker" 
                        Margin="10" 
                        Grid.Column="1" 
                        Grid.Row="2"/>
            <TextBlock Text="Due Date" 
                       FontWeight="Bold"
                       HorizontalAlignment="Right" 
                       Margin="10"
                       Grid.Column="0"
                       Grid.Row="3"/>
            <DatePicker x:Name="dueDatePicker" Margin="10" 
                     Grid.Column="1" 
                     Grid.Row="3"/>
            <TextBlock Text="Label" 
                       FontWeight="Bold"
                       HorizontalAlignment="Right" 
                       Margin="10"
                       Grid.Column="0"
                       Grid.Row="4"/>
            <ComboBox x:Name="labelComboBox"
                      Grid.Row="4"
                      Grid.Column="1"
                      Margin="10"/>
        </Grid>
        <ui:Button Grid.Row="2" 
                   Grid.ColumnSpan="2"
                   Content="Create" 
                   FontWeight="Bold"
                   Width="200" 
                   Margin="90,0,0,0"
                   Foreground="White"
                   Appearance="Success"
                   Click="Button_Click"/>
    </Grid>
</Window>
