<Window x:Class="TimeManagementProject.Views.DetailTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementProject.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="DetailTaskWindow" 
        MinWidth="400" 
        MinHeight="600"  
        Height="600" 
        Width="400">
    <Grid HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="24"
               Text="Task Detail" 
               FontFamily="Arial Black"
               HorizontalAlignment="Center"
               Margin="10"/>
        <Grid Margin="10" 
          HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch"
          Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Title" 
                       HorizontalAlignment="Right" 
                       Margin="10"
                       Grid.Column="0"
                       FontWeight="Bold"
                       Grid.Row="0"/>
            <TextBox x:Name="titleTextBox" Margin="10" 
                     Grid.Column="1" 
                     Grid.Row="0"/>
            <TextBlock Text="Description" 
                       HorizontalAlignment="Right"
                       FontWeight="Bold"
                       Margin="10"
                       Grid.Column="0"
                       Grid.Row="1"/>
            <TextBox x:Name="descriptionTextBox" Margin="10" 
                     Grid.Column="1" 
                     Grid.Row="1"
                     TextWrapping="Wrap"/>
            <TextBlock Text="Start Date"
                       FontWeight="Bold"
                       HorizontalAlignment="Right" 
                       Margin="10"
                       Grid.Column="0"
                       Grid.Row="2"/>
            <DatePicker x:Name="startDatePicker" Margin="10" 
                     Grid.Column="1" 
                     Grid.Row="2"/>
            <TextBlock Text="Due Date" 
                       FontWeight="Bold"
                       HorizontalAlignment="Right" 
                       Margin="10"
                       Grid.Column="0"
                       Grid.Row="3"/>
            <DatePicker x:Name="dueDatePicker" Margin="10" 
                     Grid.Column="1" 
                     Grid.Row="3"/>
            <TextBlock Text="Label" 
                       FontWeight="Bold"
                       HorizontalAlignment="Right" 
                       Margin="10"
                       Grid.Column="0"
                       Grid.Row="4"/>
            <ComboBox x:Name="labelComboBox"
                      Grid.Row="4"
                      Grid.Column="1"
                      Margin="10"/>
        </Grid>
        <ui:Button Grid.Row="2" 
                   FontWeight="Bold"
                   Content="Update" 
                   Width="200" 
                   Margin="5" 
                   HorizontalAlignment="Center"
                   Appearance="Primary"
                   Click="Button_Update_Click"/>
        <ui:Button Grid.Row="3" 
                   FontWeight="Bold"
                   Content="Delete" 
                   Width="200" 
                   Margin="5" 
                   HorizontalAlignment="Center"
                   Foreground="White"
                   Appearance="Danger"
                   Click="Button_Delete_Click"/>
    </Grid>
</Window>
