<Page   x:Class="TimeManagementProject.TaskListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementProject"
        xmlns:models="clr-namespace:TimeManagementProject.Models"
        mc:Ignorable="d"
        Title="TaskListWindow" Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="labelFilterComboBox"
                  Margin="10, 10, 60, 10"
                  SelectionChanged="labelFilterComboBox_SelectionChanged"/>
        <ui:Button Content="Add Task"
                   Click="Button_Click" 
                   FontFamily="Arial"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center"
                   Margin="0,10,10,0" 
                   FontSize="20"
                   Grid.Column="1"
                   Grid.Row="0"
                   Icon="{ui:SymbolIcon Symbol=AddCircle12}"/>

        <ui:ListView x:Name="taskListView" 
                  MinWidth="500"
                  Margin="10" 
                  SelectionChanged="taskListView_SelectionChanged"
                  Grid.Row="1"
                  Grid.ColumnSpan="2"
                  d:ItemsSource="{d:SampleData ItemCount=5}">
            <ui:ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:TaskObject}">
                    <Border Background="AliceBlue"
                            CornerRadius="5"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Padding="5">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <CheckBox Margin="5" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      Grid.Row="0" 
                                      Grid.Column="0" 
                                      IsChecked="{Binding isCompleted}" 
                                      Checked="CheckBox_Checked"/>
                                <TextBlock Margin="5" 
                                       Grid.Row="0" 
                                       Grid.Column="1" 
                                       Grid.ColumnSpan="4" 
                                       Text="{Binding Title}" 
                                       FontSize="24" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Label}"
                                       Background="LightBlue"
                                       Grid.Row="0"
                                       Grid.Column="5"
                                       Grid.ColumnSpan="2"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="17"
                                       />
                                <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="1" 
                                       Grid.ColumnSpan="1" 
                                       Text="Time Spend:" 
                                       FontSize="13" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"/>
                                <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="2" 
                                       Grid.ColumnSpan="1" 
                                       Text="{Binding Timer}" 
                                       FontSize="13" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                                <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="3" 
                                       Grid.ColumnSpan="1" 
                                       Text="Start date:" 
                                       FontSize="13" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"/>
                                <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="4" 
                                       Grid.ColumnSpan="1" 
                                       Text="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                       FontSize="13" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                                <TextBlock Margin="5,0,0,0" 
                                       Grid.Row="1" 
                                       Grid.Column="5" 
                                       Grid.ColumnSpan="1" 
                                       Text="Due date:" 
                                       FontSize="13" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"/>
                                <TextBlock Margin="5,0,5,0" 
                                       Grid.Row="1" 
                                       Grid.Column="6" 
                                       Grid.ColumnSpan="1" 
                                       Text="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                       FontSize="13" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                                <ui:Button Grid.Row="0" 
                                    Grid.RowSpan="2"
                                    Grid.Column="7"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Icon="{ui:SymbolIcon Symbol=Timer16}"
                                    Margin="10" 
                                    FontSize="20" 
                                    Click="Button_Timer_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>
        <CheckBox x:Name="filterByDateCheckbox"
                  Content="Filter By Due Date"
                  Grid.Column="2"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Right"
                  Margin="10"
                  Checked="filterByDateCheckbox_Checked_And_UnChecked"
                  Unchecked="filterByDateCheckbox_Checked_And_UnChecked"/>
        <Grid Grid.Column="2"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Calendar x:Name="dateFilterCalendar"
                      VerticalAlignment="Top"
                      Margin="0,10,10,10"
                      DisplayMode="Year"
                      SelectedDatesChanged="dateFilterCalendar_SelectedDatesChanged"/>
            <Frame Grid.Row="1" 
                   Margin="0,10,10,10"
                   x:Name="timerNavframe" 
                   NavigationUIVisibility="Hidden" 
                   Background="#e9ecef"/>
            <ContentPresenter x:Name="RootContentDialogPresenter" Grid.Row="2" />
        </Grid>
        
    </Grid>
</Page>
